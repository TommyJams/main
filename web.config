<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="Redirect Poll" stopProcessing="true">
                    <match url=".*" />
                        <conditions>
                            <add input="{HTTP_HOST}" pattern="^poll.tommyjams.com" />
                        </conditions>
                    <action type="Redirect" url="http://www.tommyjams.com/poll.php" redirectType="Permanent" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>